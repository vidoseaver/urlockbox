<%= form_for @user do |f| %>
  <%= f.label :email %>:
  <%= f.text_field :email, id:"Email" %><br />

  <%= f.label :password%>:
  <%= f.password_field :password, id: "Password" %><br />

  <%= f.label :password_confirmation%>:
  <%= f.password_field :password_confirmation, id:"Password_confirmation" %><br />

  <%= f.submit "Submit"%>
<% end %>
